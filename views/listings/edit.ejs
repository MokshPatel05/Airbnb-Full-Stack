<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2 style="display: flex; justify-content: center">Edit Form</h2>
      <form
        method="POST"
        action="/listings/<%=listing._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="titel" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title%>"
            class="form-control"
            required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">invalide Title!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"></label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
            required>
<%=listing.description %></textarea
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter a short description!</div>
        </div>
        <label for="image" class="form-label">Upload New Image</label>
        <mb-3 style="display: flex;">
          <img src="<%= listing.image.url %>" alt="Listing Image" style="height: 4.5vh;"> &nbsp;
          <input type="file" name="listing[image]" class="form-control" />
        </mb-3>
        <div class="row">
          <mb-3 class="col-4">
            <label for="price" class="form-label"></label>
            <input
              type="number"
              name="listing[price]"
              class="form-control"
              value="<%= listing.price%>"
              required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">invalide Price!</div>
          </mb-3>
          <mb-3 class="col-8">
            <label for="contry" class="form-label"></label>
            <input
              type="text"
              name="listing[contry]"
              class="form-control"
              value="<%= listing.contry%>"
              required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">invalide Country!</div>
          </mb-3>
        </div>
        <mb-3>
          <label for="locatioin" class="form-label"></label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            value="<%= listing.location%>"
            required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">invalide Location!</div>
        </mb-3>
        <br />
        <button class="btn btn-dark edit-btn">Submit</button>
      </form>
    </div>
  </div>
  <script src="/JavaScript/script.js"></script>
</body>
